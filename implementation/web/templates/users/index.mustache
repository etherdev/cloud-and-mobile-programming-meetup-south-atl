<div class="row">
  <h1>User List</h1>
  <p><a href="/users/">[All]</a> - <a href="/users?status=active">[Active]</a> - <a href="/users?status=inactive">[Inactive]</a> - <a href="/users?status=deleted">[Deleted]</a></p>
  <ul>
    {{#users}}
      <li><a href="/users/{{id}}/">{{first_name}} {{last_name}}</a></li>
    {{/users}}
    {{^users}}
      No users found.
    {{/users}}
  </ul>

  <h2>Create User</h2>
  <form action="/users/" method="post">
      <div class="form-group">
          <label>Email</label>
          <input type="text" name="email" value="{{email}}" required>
      </div>
  
      <div class="form-group">
          <label>First Name</label>
          <input type="text" name="first_name" value="{{first_name}}" required>
      </div>

      <div class="form-group">
          <label>Last Name</label>
          <input type="text" name="last_name" value="{{last_name}}" required>
      </div>

      <div class="form-group">
          <label>Phone</label>
          <input type="tel" name="phone" value="{{phone}}" required>
      </div>
    
      <div class="form-group">
          <label>Note:</label><br>
          <textarea type="text" name="note">{{note}}</textarea>
      </div>

      <div class="form-group">
          <input type="submit" value="Save">
      </div>
  </form>
</div>
